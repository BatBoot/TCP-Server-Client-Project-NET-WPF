<Application x:Class="Tic_Tac_Toe_Multiplayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tic_Tac_Toe_Multiplayer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#FF1E56"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="Background" Value="#323232"/>
            <Setter Property="Foreground" Value="#FFAC41"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66347F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
